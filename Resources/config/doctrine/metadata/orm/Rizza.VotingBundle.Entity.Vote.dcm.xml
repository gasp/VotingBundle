<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Rizza\VotingBundle\Entity\Vote" table="voting_vote">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <field name="objectClass" column="object_class" type="string" length="255" />
        <field name="object" column="object" type="integer" />
        <field name="user" column="object" type="string" length="255" />
        <field name="value" column="value" type="smallint" />
    </entity>

</doctrine-mapping>